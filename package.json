{
  "name": "arco-app",
  "version": "1.0.1",
  "private": true,
  "dependencies": {
    "@arco-design/web-react": "^2.41.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.5.2",
    "@types/node": "^16.18.2",
    "@types/react": "^18.0.24",
    "@types/react-dom": "^18.0.8",
    "axios": "^1.1.3",
    "history": "^5.3.0",
    "nprogress": "^0.2.0",
    "react": "^18.2.0",
    "react-arco-components": "^1.0.5",
    "react-dom": "^18.2.0",
    "react-router": "^6.4.2",
    "react-router-dom": "^6.4.2",
    "react-scripts": "5.0.1",
    "recoil": "^0.7.6",
    "recoil-persist": "^4.2.0",
    "styled-components": "^5.3.6",
    "swr": "^1.3.0",
    "typescript": "^4.8.4"
  },
  "scripts": {
    "start": "env-cmd -f .env.dev craco start",
    "build": "env-cmd -f .env.test craco build",
    "test": "craco test",
    "eject": "react-scripts eject",
    "lint": "eslint --fix --quiet --max-warnings 200 src --ext tsx,ts,js",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,json,md}\"",
    "lint:style": "stylelint \"src/**/*.{css,less}\" --fix  --custom-syntax postcss-less",
    "lint-staged": "lint-staged",
    "commit": "git add . && git cz",
    "preinstall": "npx only-allow pnpm",
    "prepare": "husky install"
  },
  "cracoConfig": "config/craco.config.js",
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-customizable"
    },
    "cz-customizable": {
      "config": "./.cz-config.js"
    }
  },
  "lint-staged": {
    "src/**/*.{js,ts,tsx}": [
      "eslint --fix --quiet --max-warnings 200 src --ext tsx,ts,js",
      "prettier --write \"src/**/*.{ts,tsx,js,json,md}\""
    ],
    "src/**/*.{less,css}": "stylelint \"src/**/*.{css,less}\" --fix  --custom-syntax postcss-less"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.5",
    "@craco/craco": "^6.4.5",
    "@types/nprogress": "^0.2.0",
    "@types/styled-components": "^5.1.26",
    "babel-plugin-import": "^1.13.5",
    "circular-dependency-plugin": "^5.2.2",
    "commitizen": "^4.3.0",
    "commitlint-config-cz": "^0.13.3",
    "commitlint-config-git-commit-emoji": "^1.0.0",
    "craco-less": "^2.0.0",
    "cz-customizable": "^7.0.0",
    "env-cmd": "^10.1.0",
    "eslint": "^8.26.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.0",
    "less": "^4.1.3",
    "less-loader": "^11.1.0",
    "lint-staged": "^13.2.2",
    "postcss": "^8.4.18",
    "postcss-html": "^1.5.0",
    "postcss-less": "^6.0.0",
    "prettier": "^2.7.1",
    "simple-progress-webpack-plugin": "^2.0.0",
    "stylelint": "^14.14.0",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-recommended-less": "^1.0.4",
    "stylelint-config-standard": "^29.0.0",
    "stylelint-less": "^1.0.6",
    "stylelint-order": "^5.0.0",
    "webpack-bundle-analyzer": "^4.9.0",
    "webpackbar": "^5.0.2"
  }
}
